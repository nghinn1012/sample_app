<header class="navbar navbar-fixed-top navbar-inverse">
  <%= link_to t("home.heading"), "static_pages#home", id: "logo" %>
  <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to t("home.title"), "static_pages#home" %></li>
      <li><%= link_to t("help.title"), "static_pages#help" %></li>
      <% if logged_in? %>
        <li><%= link_to t("users"), "#" %></li>
        <li><%= link_to t("users"), users_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t("accounts") %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("profile"), current_user %></li>
            <li><%= link_to t("settings"), "#" %></li>
            <li><%= link_to t("update"), edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= button_to t("logout"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t("login"), login_path %></li>
      <% end %>
    </ul>
  </nav>
</div>
</header>
